<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

    <TextView
            android:text="Hello World!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:text="Hello World!"
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:text="Hello btjson!"
            android:id="@+id/btjson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <Button
            android:text="Hello String!"
            android:id="@+id/btstring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    <Button
            android:text="Hello 测试友盟错误上报!"
            android:id="@+id/bterr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <Button
            android:text="Hello 参数传递 Restore!"
            android:id="@+id/btarg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:text="Hello 参数传递 !"
            android:id="@+id/btarg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <Button
            android:text="Hello dagger2 !"
            android:id="@+id/btdagger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <Button
            android:text="Hello Rxjava!"
            android:id="@+id/btrxjava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <Button
            android:text="Hello Rxjava life 不保留活动开启，分分分钟内存泄露!"
            android:id="@+id/btrxjavalife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <Button
            android:text="Hello Rxjava life 加入生命周期管理"
            android:id="@+id/btrxjavalife2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>
